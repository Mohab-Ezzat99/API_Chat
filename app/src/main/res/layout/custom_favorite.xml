<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_favorite_cardImage"
        android:layout_width="@dimen/_54sdp"
        android:layout_height="@dimen/_54sdp"
        app:cardCornerRadius="@dimen/_27sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:contentDescription="@string/txt_null"
            android:id="@+id/custom_favorite_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/custom_favorite_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_favorite_cardImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/custom_favorite_cardImage"
        app:layout_constraintStart_toStartOf="@+id/custom_favorite_cardImage"
        app:layout_constraintTop_toBottomOf="@+id/custom_favorite_cardImage" />

</androidx.constraintlayout.widget.ConstraintLayout>